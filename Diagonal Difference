#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main()
{
    int a[100][100] , i ,j ,d1=0 ,d2 = 0 , diff , n;
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            scanf("%d",&a[i][j]);
            if(i==j)
            d1 = d1 + a[i][j];
            if(i==(n-j-1))
            d2 = d2 + a[i][j];
        }
    }
    diff=abs(d1 - d2);
    printf("%d",diff);
}
    
